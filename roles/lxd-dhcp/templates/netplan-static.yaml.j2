
network:
  version: 2

  ethernets:
    # --- Interface Management (eth0) ---
    eth0:
      dhcp4: false
      addresses:
        - 10.0.0.67/24
      routes:
        - to: default
          via: 10.0.0.1
      nameservers:
        search: [shq.internal]
        addresses: [10.0.0.1]

    # --- Interface LAN (eth1) ---
    eth1:
      dhcp4: false
      addresses:
        - 192.168.10.67/24
      routes:
        - to: default
          via: 192.168.10.1
      nameservers:
        search: [shq.internal]
        addresses: [192.168.10.53]
